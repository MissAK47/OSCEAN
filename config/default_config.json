{
    "database": {
        "path": "databases/metadata.db",
        "type": "sqlite"
    },
    "thread_pool": {
        "primary_threads": 16,
        "io_threads": 8,
        "quick_threads": 4
    },
    "services": {
        "metadata": {
            "enabled": true,
            "cache_size": 1000
        },
        "data_access": {
            "enabled": true,
            "default_format": "netcdf"
        },
        "crs": {
            "enabled": true,
            "default_crs": "EPSG:4326"
        },
        "interpolation": {
            "enabled": true,
            "default_method": "bilinear"
        },
        "spatial_ops": {
            "enabled": true
        },
        "output": {
            "enabled": true,
            "default_format": "netcdf"
        }
    }
}
